<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/index_reservation_confirm_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.IndexPopMenuTheme"
        app:theme="@style/AppTheme.indexCommonActivity"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科室 :"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/index_reservation_confirm_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/index_reservation_confirm_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/index_reservation_confirm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="280dp"
                    android:text="2016年10月20日 13:32:23"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#eec9c9c9"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看诊人 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/index_reservation_confirm_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="小明"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挂号费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/index_reservation_confirm_register_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊查费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/index_reservation_confirm_inspecting_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/index_reservation_confirm_checking_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊室 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/index_reservation_confirm_department_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="40dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="确 认 预  约"
                    android:id="@+id/index_reservation_confirm_btn"
                    android:onClick="appointmentConfirm"
                    android:textSize="20sp"
                    android:textColor="@color/base_color_text_white"
                    android:background="@drawable/selector_button"/>

            </LinearLayout>






        </LinearLayout>



    </ScrollView>



</LinearLayout>
