<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5e5d5c"
        android:orientation="horizontal">

        <Button
            android:id="@+id/history_details_exit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:text="x"
            android:background="@drawable/selector_circular_button"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_toLeftOf="@+id/result_title"/>


        <TextView
            android:id="@+id/history_details_title"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="预约结果"
            android:textColor="#ffffff"
            android:layout_marginRight="18dp"
            android:textSize="20dp" />
   </LinearLayout>


    <ScrollView
        android:id="@+id/history_details_scrooll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科室 :"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/history_details_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="280dp"
                    android:text="2016年10月20日 13:32:23"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#eec9c9c9"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看诊人 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="小明"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挂号费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_register_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="1.0元"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊查费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_inspecting_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="1.0元"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_checking_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="1.0元"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊室 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_department_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="1号诊室"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="预约成功"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="操作时间 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="yyyy-MM-dd HH:mm:ss"
                    android:paddingLeft="15dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="评论内容 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/history_details_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:scrollbars="vertical"
                    android:text="内容容内容内容内容内容内容容内容内容内容"
                    android:paddingLeft="15dp"
                    android:textSize="16dp"/>
            </LinearLayout>
    </LinearLayout>
    </ScrollView>


</LinearLayout>
