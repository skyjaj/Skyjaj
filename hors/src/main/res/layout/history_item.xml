<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/listview_item">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/history_hospital"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="广东药学院附属医院"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/history_doctor_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="医生:陈医生"
            android:textColor="#b4b6b4"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/history_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="03-04 12:01"
            android:textColor="#b4b6b4"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/history_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约成功"
            android:textColor="#b4b6b4"/>
    </LinearLayout>

</LinearLayout>