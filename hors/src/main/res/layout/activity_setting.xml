<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe0df">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:id="@+id/setting_update_password_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:onClick="onClick"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_textview">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/setting_update_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:text="修改密码"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dfe0df"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:id="@+id/setting_exit_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:onClick="onClick"
        android:background="@drawable/selector_textview">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/setting_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:text="退出"/>
    </LinearLayout>

</LinearLayout>