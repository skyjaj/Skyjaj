<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/manager_user_item_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:src="@drawable/me"
            android:layout_gravity="center_vertical"/>


        <LinearLayout
            android:id="@+id/manager_user_item_text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp">
                <TextView
                    android:id="@+id/manager_user_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/manager_user_item_phone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帐号:"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#898e8b"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/manager_user_item_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13631158354"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#898e8b"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/manager_user_item_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yyyy-MM-dd HH:mm"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#a4a4a4"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textStyle="italic"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:descendantFocusability="blocksDescendants">

            <Button
                android:id="@+id/manager_user_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状 态"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:focusable="false"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/selector_button"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>