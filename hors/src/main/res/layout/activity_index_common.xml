    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >


        <com.skyjaj.hors.widget.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:hors_icon="@drawable/ic_menu_emoticons"
            app:hors_text="@string/tab_service"
            app:hors_text_size="12sp"
            app:hors_color="#ff45c01a" />


        <com.skyjaj.hors.widget.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:hors_icon="@drawable/ic_menu_start_conversation"
            app:hors_text="@string/tab_found"
            app:hors_text_size="12sp"
            app:hors_color="#ff45c01a" />

        <com.skyjaj.hors.widget.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:hors_icon="@drawable/ic_menu_myplaces"
            app:hors_text="@string/tab_me"
            app:hors_text_size="12sp"
            app:hors_color="#ff45c01a" />
    </LinearLayout>


