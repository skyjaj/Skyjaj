<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5e5d5c">

        <TextView
            android:id="@+id/result_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:text="预约结果"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/result_complete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="完成"
            android:background="@drawable/selector_circular_button"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/result_title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal"
        android:background="#eff1f1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_cab_done_holo_dark"
            android:background="@drawable/selector_circular_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:text="预约成功"
            android:textColor="#0d860d"
            android:textSize="20dp"/>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="15dp"
        android:text="预约信息"
        android:gravity="center"
        android:textSize="22dp"/>

    <ScrollView
        android:id="@+id/show_result_scrooll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科室 :"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/result_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/result_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="中医科门诊"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/result_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="280dp"
                    android:text="2016年10月20日 13:32:23"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#eec9c9c9"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看诊人 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/result_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="小明"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挂号费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/result_register_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="1.0元"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊查费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/result_inspecting_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="1.0元"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查费 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/result_checking_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="1.0元"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#eee7e7e7"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊室 :"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/result_department_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:text="1号诊室"
                    android:paddingLeft="60dp"
                    android:textSize="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/weixin_shared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/selector_button"
        android:textColor="#ffffff"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:text="分享到微信朋友圈"
        android:onClick="onClick"/>

</LinearLayout>
