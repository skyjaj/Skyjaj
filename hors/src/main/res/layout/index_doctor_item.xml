<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/index_service_item_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:src="@drawable/me"
            android:layout_gravity="center_vertical"/>


        <LinearLayout
            android:id="@+id/index_doctor_text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp">
                <TextView
                    android:id="@+id/index_doctor_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈医生"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/index_doctor_item_title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="主任医师"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:paddingLeft="2dp"
                    android:layout_gravity="center"
                    android:textColor="#898e8b"
                    android:textSize="12dp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/index_doctor_item_registering_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挂号费1元"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#898e8b"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/index_doctor_item_inspecting_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊查费2元"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#898e8b"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/index_doctor_item_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊室地址"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#a4a4a4"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textStyle="italic"/>
             </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:descendantFocusability="blocksDescendants">

        <Button
            android:id="@+id/index_doctor_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详 情"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:focusable="false"
            android:background="@drawable/selector_button"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>