<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/update_doctor_head_view"
            android:background="@drawable/selector_textview"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/update_doctor_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/me"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfe0df"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/update_doctor_account_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:focusable="true"
            android:onClick="onClick"
            android:background="@drawable/selector_textview">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登陆帐号"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/update_doctor_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="13631158354"
                android:layout_gravity="center"
                android:gravity="right"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfe0df"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/update_doctor_password_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:focusable="true"
            android:onClick="onClick"
            android:background="@drawable/selector_textview">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/update_doctor_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="13631158354"
                android:password="true"
                android:maxLength="18"
                android:layout_gravity="center"
                android:gravity="right"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfe0df"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/update_doctor_title_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onClick"
            android:background="@drawable/selector_textview">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职称 "
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/update_doctor_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="主任医师"
                android:layout_gravity="center"
                android:gravity="right"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfe0df"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/update_doctor_nickname_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onClick"
            android:background="@drawable/selector_textview">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/update_doctor_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Tanja"
                android:layout_gravity="center"
                android:gravity="right"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#dfe0df"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/update_doctor_sex_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onClick"
            android:background="@drawable/selector_textview">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/update_doctor_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="男"
                android:layout_gravity="center"
                android:gravity="right"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfe0df"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/update_doctor_region_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onClick"
            android:background="@drawable/selector_textview">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="地区"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/update_doctor_region"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="广东省中山市广东药学院"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center"
                style="?android:attr/textViewStyle"
                android:gravity="right"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfe0df"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/update_doctor_signtrue_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onClick"
            android:background="@drawable/selector_textview">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/update_doctor_signtrue"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="哎哟，不错"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="right"
                android:focusable="false" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dfe0df"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/update_doctor_introduction_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onClick"
            android:background="@drawable/selector_textview">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/update_doctor_introduction"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="哎哟，不错"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="right"
                android:focusable="false" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
