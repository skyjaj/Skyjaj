<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <!-- 专门为医生角色查看已经预约的病人item-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_reservation_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:src="@drawable/me"
            android:layout_gravity="center_vertical"/>


        <LinearLayout
            android:id="@+id/show_reservation_text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp">
                <TextView
                    android:id="@+id/show_reservation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈小明"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">



                <TextView
                    android:id="@+id/show_reservation_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间:"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#898e8b"/>


                <TextView
                    android:id="@+id/show_reservation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-03-10 12:30"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#898e8b"
                    android:singleLine="true"
                    android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/show_reservation_mobile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话: "
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#a4a4a4"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/show_reservation_mobile"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="1363115834"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#a4a4a4"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textStyle="italic"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:descendantFocusability="blocksDescendants">

            <Button
                android:id="@+id/show_reservation_remark_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备 注"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:focusable="false"
                android:background="@drawable/selector_button"/>
        </LinearLayout>

    </LinearLayout>





</LinearLayout>