<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#52514f"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_back"
            android:layout_gravity="center"/>

        <com.skyjaj.hors.widget.ClearEditTextView
            android:id="@+id/activity_search_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/actionbar_search_icon"
            android:textColor="#ffffff"
            android:hint="搜索"
            android:textSize="16dp"
            android:textColorHint="#81817f"
            android:scrollbars="horizontal"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:id="@+id/search_more_tips_view"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/search_more_tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="搜索科室、医生..."
            android:textColor="#abaaab"/>

    </LinearLayout>

    <ListView
        android:id="@+id/activity_search_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebdba"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

    <ListView
        android:id="@+id/activity_search_listview_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
